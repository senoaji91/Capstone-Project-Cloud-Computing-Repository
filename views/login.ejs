<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css"/>
    <title>Login</title>
</head>
<body>
    <h1>login</h1>

    <ul>
        <% if(messages.succes_msg) { %>
            <li><%= messages.succes_msg %></li>
        <% } %>
    </ul>

    <ul>
        <% if(messages.error){ %>
            <li><%= messages.error %></li>
        <% } %>
    </ul>

    <form action="/login" method="POST">
        <div>
            <input
                type="email"
                id="email"
                name="email"
                placeholder="Email"
                required
            />
        </div>
        <div>
            <input
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                required
            />
        </div>
        <div>
            <input type="submit" value="Login" />
        </div>
        <a href="/register">Register here</a>
    </form>
</body>